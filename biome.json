{
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "attributePosition": "auto",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "files": {
    "includes": [
      ".gitignore",
      "package.json",
      "tsconfig.json",
      "next.config.ts",
      "postcss.config.mjs",
      "biome.json",
      ".husky/pre-commit",
      "src/**/*.css",
      "src/**/*.ts",
      "src/**/*.tsx"
    ]
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
